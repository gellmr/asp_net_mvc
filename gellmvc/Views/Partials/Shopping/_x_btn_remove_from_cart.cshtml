@model gellmvc.Domain.Entities.ProductLine

@{
  var disabled = "";
  if (Model.QtyInCart <= 0)
  {
    disabled = "disabled=disabled";
  }
}

<!-- We are at the CART -->

<button @disabled name="remove-from-cart" type="button" class="btn btn-default remove-from-cart" id="remove-from-cart-#@Model.Product.Id">
  <span class="glyphicon glyphicon-remove"></span>
</button>


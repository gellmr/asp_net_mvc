@model asp_net_mvc.Models.ShoppingViewModels.OrderedProductViewModel

@{
    var disabled = "";
    if (Model.QuantityToOrder <= 0)
    {
        disabled = "disabled=disabled";
    }
}

<div class="btn-group">
    <button @disabled class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" type="button">
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu pull-right" role="menu">
        <li>
            <a class="remove-from-cart" href="#" id="remove-from-cart-@Model.Product.Id" name="remove-from-cart">Remove from Cart</a>
        </li>
    </ul>
</div>
